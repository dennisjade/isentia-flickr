doctype html
html(ng-app="flickrApp")
  head
    title= title

    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    meta(name='keywords', content='calamba hospital government')

    link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.min.css', type='text/css', media='all')
    link(rel='stylesheet', href='/stylesheets/style.css')

  body(ng-controller="FlickrCtrl")
    block content

    script(src='/bower_components/jquery/dist/jquery.min.js')
    script(src="/bower_components/bootstrap/dist/js/bootstrap.min.js")
    script(src="/bower_components/angular/angular.js")
    script(src="/bower_components/angular-resource/angular-resource.min.js")
    script(src='/javascripts/app/appController.js')
